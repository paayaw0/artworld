<div class="container">
<div class="row">
<%= form_with model: subscriber, url: url, class: "contact" do |form| %>
    <div class="row d-flex flex-column align-items-center">
        <div class="form-group col-md-8">
            <%= form.label :email %>
            <%= form.text_field :email, class: "form-control" %>
        </div>
    </div>
    <br>
 
  <%= form.submit "Subscribe", class: "subscribe-button" %>
<% end %>
</div>
</div>